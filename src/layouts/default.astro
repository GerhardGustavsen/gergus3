---
import Layout from "./main.astro";
import Navbar from "../components/Navbar/Navbar.astro";
---

<Layout>
  <Navbar />
  <main class="feed">
    <slot />
  </main>
</Layout>

<!-- ######################## CSS ######################## -->

<style>
  html,
  body {
    font-family: "Fira Sans", sans-serif, sans;
    line-height: 1.3;
    font-size: 18px;

    margin: 0px;
    padding: 0px;
    background-color: var(--color-bg);
    color: var(--color-text);

    background-image: url("/images/texture.png");
    background-repeat: repeat;
    background-size: 400px;
  }

  .feed {
    padding-top: 4em;
    padding-bottom: 4em;
    margin: auto;

    position: relative;
    height: 100%;
    max-width: 720px;
    width: 100%;
  }

  @media (max-width: 1300px) {
    .feed {
      margin-left: 280px;
    }
  }
  @media (max-width: 1100px) {
    .feed {
      margin-left: 0px;
      margin-right: 100px;
      float: right;
    }
  }
  @media (max-width: 900px) {
    .feed {
      float: none;

      margin-right: auto;
      margin-left: auto;
    }
  }
</style>
