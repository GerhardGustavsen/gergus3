---
const { posts = [], title = "" } = Astro.props;

function fm(p: any) {
    return p.frontmatter ?? p.data ?? {};
}

function stars(n: any) {
    const v = Math.max(0, Math.min(5, Number(n) || 0));
    return "★★★★★☆☆☆☆☆".slice(5 - v, 10 - v);
}
---

<ul class="list">
    {title && <h3 class="title">{title}</h3>}
    {
        posts.map((post: any) => {
            const f = fm(post);
            return (
                <li class="flex">
                    <a class="element" href={post.url}>
                        <img class="cover" src={f.img} loading="lazy" />

                        <div class="about">
                            <div class="top">
                                <p class="movie">
                                    {f.title} <span> ({f.year})</span>
                                </p>
                                <p class="director">{f.director}</p>
                                <p class="genre">{f.genre}</p>
                            </div>
                            <p class="rating">{stars(f.rating)}</p>
                        </div>
                    </a>
                </li>
            );
        })
    }
</ul>

<!-- ######################## CSS ######################## -->
<style>
