---
const { posts = [], title = "" } = Astro.props;

function fmtDate(d: string | Date) {
    try {
        return new Date(d).toLocaleDateString("en-GB");
    } catch {
        return String(d ?? "");
    }
}
---

<div class="list">
    {title && <h3 class="title">{title}</h3>}
    <ul class="">
        {
            posts.map((post: any) => (
                <li class="element">
                    <a href={post.url}>
                        {post.frontmatter?.title ?? post.slug ?? post.id}
                    </a>
                    <p class="date">{fmtDate(post.frontmatter?.date)}</p>
                </li>
            ))
        }
    </ul>
</div>

<!-- ######################## CSS ######################## -->

<style>
    .list {
        margin: 5em 1em;

        .title {
            border-bottom: 1px solid var(--color-backdrop);
            margin: 0;
            padding-bottom: 0.5em;
        }

        .element {
            display: flex;
            justify-content: space-between;

            padding: 0.5em;
            border-bottom: 1px solid var(--color-backdrop);
        }
        .element:last-child {
            border-bottom: none;
        }

        a {
            color: var(--color-text-link);

            &:hover {
                text-decoration: underline;
            }
        }

        .date {
            padding-left: 2em;
            display: flex;
            flex-direction: column;
            justify-content: space-around;
        }
    }
</style>
