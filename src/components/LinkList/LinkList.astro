---
import Title from "../../components/Title/Title.astro";

interface Props {
    title: string;
    links: string[];
}

const { title, links } = Astro.props;
---

<Title title={title} />
<ul class="list">
    {
        links.map((url) => (
            <li class="element">
                <a
                    class="link"
                    href={`https://${url}`}
                    target="_blank"
                    rel="noopener noreferrer"
                >
                    {url}
                </a>
            </li>
        ))
    }
</ul>

<style>
    .list {
        padding: 0em 1em 5em 1em;
    }
    .element {
        padding-bottom: 0.3em;
        padding-top: 0.2em;
        border-bottom: 1px solid var(--color-backdrop);
    }
    .link {
        color: var(--color-accent);
    }
    .link:hover {
        text-decoration: underline;
    }
    .element:last-child {
        border-bottom: none;
    }
</style>
