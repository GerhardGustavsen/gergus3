---
import Layout from "../layouts/default.astro";
import Gallery from "../components/Gallery/Gallery.astro";
const mods = import.meta.glob("../assets/photos/*.{jpg,jpeg,png,webp,avif}", {
    eager: true,
    import: "default",
});

const urls = Object.values(mods);

console.log(urls);
---

<Layout>
    <div class="feed">
        <div class="titleBox">
            <h1 class="title">my photoes ðŸ–¼</h1>
